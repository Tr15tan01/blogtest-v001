<%- include('includes/head.ejs') %>

<%- include('includes/nav.ejs') %>
<!-- Page Header -->
<header class="masthead blur-image" style="background-image: url(<%= smallImageUrl %>)"
  data-image-full="<%= imageurl %>">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="post-heading">
          <h1 data-aos="fade-up" data-aos-delay="400"><%= heading %></h1>
          <h2 class="subheading" data-aos="fade-up" data-aos-delay="500"><%- subheading %></h2>
          <span class="meta" data-aos="fade-up" data-aos-delay="600">Posted by
            <a href="#"><%- author %></a>
            on <%= dateCreated.toDateString() %>, <% if(dateCreated.getHours()<10) { %>
            <%= '0' + val.dateCreated.getHours() %> <% } else { %>
            <%=dateCreated.getHours() %> <% } %> :
            <% if(dateCreated.getMinutes()<10) { %>
            <%= '0' + dateCreated.getMinutes() %> <% } else { %>
            <%= dateCreated.getMinutes() %> <% } %>:<%= dateCreated.getSeconds() %> </span>
        </div>
      </div>
    </div>
  </div>
  <img src="<%= imageurl %>" alt="header" />
</header>

<!-- Post Content -->
<article>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <!-- <h2 class="section-heading"><%=subheading %></h2> -->
        <p><%- content %></p>

        <hr>


        <blockquote class="blockquote">The dreams of yesterday are the hopes of today and the reality of tomorrow.
          Science has not yet mastered prophecy. We predict too much for the next year and yet far too little for the
          next ten.</blockquote>

        <span class="caption text-muted">To go places and do things that have never been done before – that’s what
          living is all about.</span>
      </div>
    </div>
  </div>
</article>

<hr>

<!-- Footer -->

<!-- Footer -->
<%- include('includes/footer.ejs') %>
<script src="js/jquery.min.js"></script>
<script src="js/bootstrap.bundle.min.js"></script>
<!-- Image blur -->
<script src="js/imgs.js"></script>
