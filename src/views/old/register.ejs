<%- include('includes/headlog.ejs') %>

  <body>
    <div class="page-wrapper bg-gra-02 p-t-36 p-b-100 font-poppins">
        <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <div class="card-body">
                    <h2 class="title">Registration Form</h2>
                    <form method="POST">
                        <div class="row row-space">
                            <div class="col-1">
                                <div class="input-group">
                                    <label class="label">Name <div class="error-message"><%= errorMessageName %></div></label>
                                    <input class="input--style-4" type="text" name="name">
                                </div>
                            </div>
                            <div class="col-1">
                                <div class="input-group">
                                    <label class="label">email <div class="error-message"><%= errorMessageEmail %></div></label>
                                    <input class="input--style-4" type="email" name="email">
                                </div>
                            </div>
                        </div>

                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Password <div class="error-message"><%= errorMessagePassword %></div></label>
                                    <input class="input--style-4" type="password" name="password">
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Age <div class="error-message"><%= errorMessageAge %></div></label>
                                    <input class="input--style-4" type="number" name="age">
                                </div>
                            </div>
                        </div>

                        <div class="p-t-15">
                            <button class="btn btn--radius-2 btn--blue" type="submit">Submit</button>
                        </div>
                    </form>
                    <a class="link" href="login">Have an account? Login Now</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>