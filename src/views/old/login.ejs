<%- include('includes/headlog.ejs') %>

  <body>
    <div class="page-wrapper bg-gra-02 p-t-36 p-b-100 font-poppins">
        <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <div class="card-body">
                    <h2 class="title">Login Form</h2>
                    <form method="POST" action="/login">
                        <div class="row row-space">
                            <div class="col-1">
                                <div class="input-group">
                                    <label class="label">email <div class="error-message"><%= errorMessageEmail %></label>
                                    <input class="input--style-4" type="text" name="email" value =" <%= inputValue %>" autocomplete="off">
                                </div>
                            </div>
                            <div class="col-1">
                                <div class="input-group">
                                    <label class="label">password</label>
                                    <input class="input--style-4" type="password" name="password">
                                </div>
                            </div>
                        </div>
                        <div class="p-t-15">
                            <button class="btn btn--radius-2 btn--blue" type="submit">Submit</button>
                        </div>
                    </form>
                   
                </div>
                <a class="link" href="register">Don't Have an account? Register Now</a>
            </div>
        </div>
    </div>
</body>
</html>